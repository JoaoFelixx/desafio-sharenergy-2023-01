{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./build",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "__test__/**/*"
  ]
}